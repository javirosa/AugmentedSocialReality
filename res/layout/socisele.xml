<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/sociSeleMainLayo" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:screenOrientation="portrait" xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView android:id="@+id/sociSeleNarrTitl" android:layout_width="fill_parent" android:layout_height="26px" android:text="Narrative Selection:" android:layout_below="@+id/sociSeleTitl"></TextView>
	<Spinner android:id="@+id/sociSeleSpin" android:layout_width="fill_parent" android:layout_height="wrap_content" android:entries="@array/situation"></Spinner>
	<LinearLayout android:id="@+id/sociSeleList" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
		<LinearLayout android:id="@+id/widget163" android:layout_width="fill_parent" android:layout_height="20px" android:orientation="horizontal">
			<TextView android:id="@+id/sociSeleLis1Title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="ACTORS:" android:textSize="10sp" android:textStyle="bold" android:layout_weight="1" android:gravity="center"></TextView>
			<TextView android:id="@+id/sociSeleLis2Title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="NOT ACTING:" android:textSize="10sp" android:textStyle="bold" android:layout_weight="1" android:gravity="center"></TextView>
		</LinearLayout>
		<LinearLayout android:id="@+id/widget162" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="0" android:orientation="horizontal">
			<ListView android:id="@+id/sociSeleIn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"></ListView>
			<ListView android:id="@+id/sociSeleOut" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"> </ListView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/sociSeleDotLayo" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="0" android:orientation="horizontal">	
		<LinearLayout android:id="@+id/sociSeleDotPad" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1">	</LinearLayout>
		<AbsoluteLayout android:id="@+id/sociSeleToucPad" android:layout_width="200px" android:layout_height="200px" android:layout_weight="0" android:layout_centerHorizontal="true" android:layout_gravity="center|center_horizontal">
			<ImageButton android:id="@+id/sociSeleDot" android:layout_width="100px" android:layout_height="100px" android:layout_x="10px" android:layout_y="10px" android:hapticFeedbackEnabled="true"></ImageButton>
		</AbsoluteLayout>
		<LinearLayout android:id="@+id/sociSeleDotPad2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1">	</LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/sociSeleButtLayo" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="0">
		<Button android:id="@+id/sociSeleToNarr" android:layout_width="200px" android:layout_height="50px" android:text="Go To Narrative Selection"></Button>
		<LinearLayout android:id="@+id/sociSeleButtPad" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1">	</LinearLayout>		
		<Button android:id="@+id/sociSeleToMain" android:layout_width="200px" android:layout_height="50px" android:text="Exit" ></Button>
	</LinearLayout>
</LinearLayout>
